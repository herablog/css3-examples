@import 'includes/examples'

.image {
    position: relative;
}

.photo {
    width: 100%;
}

.caption {
    background: rgba(255,255,255,.4);
    color: #000;
    font-family: sans-serif;
    font-size: 1.2em;
    height: 2em;
    left: 0;
    line-height: 2;
    overflow: hidden;
    padding: 0 .5em;
    position: absolute;
    text-overflow: ellipsis;
    text-shadow: 1px 1px 1px rgba(255,255,255,.2);
    top: 5%;
    white-space: nowrap;
    width: 100%;
}
