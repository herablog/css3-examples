@import 'includes/examples'

#main {
    padding: 50px;
}

/* list */
.musician-name {
    height: 2em;
    line-height: 2;
    padding: 0 .7em;
}

.musician-name {
    border-top: 1px solid #000;
}

.musician-name:last-child {
    border-bottom: 1px solid #000;
}

.musician-name a {
    color: #33f;
    text-decoration: none;
}

/* icon */
.icon-note::before {
    animation: rotate-note .4s ease-out alternate infinite;
    display: inline-block;
    font-family: 'entypo', sans-serif;
    padding: 0 .5em 0 0;
}



/* animations */
@keyframes rotate-note {
    from { transform: rotate(0); }
    to { transform: rotate(15deg); }
}
