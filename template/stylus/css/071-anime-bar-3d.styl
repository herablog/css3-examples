@import 'includes/examples'

/* common styles */
.graph {
    margin: 30px;
    font-family: sans-serif;
}

.stage-dark {
    background-color: #000;
    background-image:
        radial-gradient(80% 35%, rgba(255,255,255,.2), transparent);
    padding: 20px;
}

/* 3d bar graph */
.bar-3d-graph {
	flexbox()
	position: relative;
}

/* bar */
.bar-3d-graph-item {
	background: rgba(235,248,248,.5);
	height: 1.5em;
	position: relative;
	text-align: center;
	text-indent: -1em;
}

.bar-3d-graph-item .text {
	color: #000;
	font-size: .8em;
	text-shadow: 0 1px 0 rgba(255,255,255,.2);
}

/* add transition */
.bar-3d-graph-item,
.bar-3d-graph-item::before,
.bar-3d-graph-item::after {
	transition: all .2s ease-out;
}

/* insert circles */
.bar-3d-graph-item:first-child::before,
.bar-3d-graph-item:not(:last-child)::after,
.bar-3d-graph-item:last-child::after,
.bar-3d-graph-item:hover::before {
	border-radius: 50%;
	content: '';
	height: 100%;
	position: absolute;
	width: 1em;
}

/* apply color and position */
.bar-3d-graph-item:first-child::before {
	background: rgba(235,248,248,.5);
	clip: rect(0, .5em, 1.5em, 0);
	left: -.5em;
	top: 0;
}

.bar-3d-graph-item:not(:last-child)::after {
	background: rgba(235,248,248,.3);
	right: 0;
	top: 0;
}

.bar-3d-graph-item:last-child::after {
	background: rgba(235,248,248,.3);
	right: 0;
	top: 0;
}

/* last item */
.bar-3d-graph-item:last-child {
	border-radius: 0 .5em .5em 0;
}

/* hover styles */

/* text color */
.bar-3d-graph-item:hover .text {
	color: #fff;
}

/* bar color */
.bar-3d-graph-item:hover,
.bar-3d-graph-item:first-child:hover::before {
	background: rgba(0,255,102,.8);
}

.bar-3d-graph-item:not(:last-child):hover::after,
.bar-3d-graph-item:last-child:hover::after {
	background: rgba(0,255,102,.5);
}

.bar-3d-graph-item:not(:last-child):hover {
	border-radius: 0 .5em .5em 0;
}
.bar-3d-graph-item:not(:first-child):hover::before {
	background: rgba(0,255,102,.65);
	border-radius: 50% 0 0 50%;
	left: -1em;
	top: 0;
}
