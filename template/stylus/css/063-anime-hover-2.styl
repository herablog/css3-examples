@import 'includes/examples'

/* emotions list */
.emotions {
    flexbox()
    margin: 4em 0;
}

.emotions-item {
    background: #ff6;
    box-flex: 1;
    font-family: pt-sans-narrow, sans-serif;
    text-align: center;
    width: 100%;
}

.emotions-item a {
    color: #000;
    display: inline-block;
    padding: .5em 0;
    position: relative;
    width: 100%;
}

/* insert icons */
.emotions-item a::before {
    display: inline-block;
    font-family: 'fontelico', sans-serif;
    font-size: 2em;
    width: 100%;
}

/* description */
.emotions-description {
    background: #fff;
    border: 4px solid #ff0;
    border-radius: 10px;
    box-sizing: border-box;
    display: block;
    left: 0;
    opacity: 0;
    padding: 5px 0;
    position: absolute;
    text-align: center;
    top: -2.5em;
    width: 100%;
}

/** add triangle to bottom */
.emotions-description::after {
    border-left: solid 9px transparent;
    border-right: solid 9px transparent;
    border-top: solid 13px #ff0;
    bottom: -13px;
    content: "";
    display: block;
    height: 0;
    left: 50%;
    margin-left: -9px;
    position: absolute;
    width: 0;
}

/* set transition */
.emotions-item a,
.emotions-item a:hover .emotions-description {
    transition: all .3s;
}

/* hover styles */
.emotions-item a:hover {
    background: #ff0;
}

.emotions-item a:hover .emotions-description {
    opacity: 1;
    top: -3em;
}
