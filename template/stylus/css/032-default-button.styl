@import 'includes/examples'

div{
    margin: 10px 0;
}

#main {
	padding: 30px;
}

.button {
    appearance: none;
    border-radius: 2px;
    cursor: pointer;
    font-size: .9em;
    min-height: 40px;
    min-width: 100px;
    text-align: center;
}

/* default button */
.button-default {
    background: #eee;
    border: solid 1px #bebebe;
    color: #333;
}

/* reset button */
.button[type="reset"] {
    background: #eee;
    border: solid 1px #bebebe;
    color: #333;
}

/* Submit button */
.button[type="submit"] {
    background: #6cf;
    border: solid 1px #bebebe;
    color: #333;
}

/* Disabled button */
.button[disabled] {
    background: #f5f5f5;
    border: solid 1px #d8d8d8;
    color: #8e8e8e;
    cursor: default;
}

