@import 'includes/examples'

/* frame */
.frame-base {
	padding: 20px;
}

/* heading */
.heading {
	background: #333;
	color: #fff;
	font-family: sans-serif;
	padding: 4px 8px;
}

/* thumbnail */
.thumbnail {
  background-color: #ccc;
  border: 1px solid #aaa;
  border-radius: 4px; /* default style */
}

.thumbnail.square {
  border-radius: 0;
}

.thumbnail.large {
  background-size: 100px 100px;
  height: 100px;
  width: 100px;
}
.thumbnail.medium {
  background-size: 60px 60px;
  height: 60px;
  width: 60px;
}
.thumbnail.small {
  background-size: 40px 40px;
  height: 40px;
  width: 40px;
}

.thumbnail.user {
  background-image: url(/public/img/thumb_user.png);
}
.thumbnail.app {
  background-image: url(/public/img/thumb_app.png);
}

.thumbnail.online,
.thumbnail.offline {
  position: relative;
}
.thumbnail.online::after,
.thumbnail.offline::after {
  border-radius: 7px;
  bottom: 1px;
  content: "";
  display: block;
  height: 14px;
  position: absolute;
  right: 1px;
  width: 14px;
}
.thumbnail.online::after {
  background-color: #4dac26;
}
.thumbnail.offline::after {
  background-color: #eee;
}


/* button */
.button {
    appearance: none;
    border: none;
    box-sizing: border-box;
    cursor: pointer;
}

.button[disabled] {
    cursor: default;
}

.button-default {
    background: #efefef;
    border-radius: 4px;
    color: #333;
    padding: 6px 10px;
    text-align: center;
}

.button-default:hover {
    background: #d8d8d8;
}

.button-default[disabled],
.button-default[disabled]:hover {
    background: #efefef;
    color: #666;
    opacity: .8;
}

.button-primary {
    background: #6cf;
    border-radius: 4px;
    color: #333;
    padding: 6px 10px;
    text-align: center;
}

.button-primary:hover {
    background: #39f;
}

.button-primary[disabled],
.button-primary[disabled]:hover {
    background: #6cf;
    color: #666;
    opacity: .8;
}

.button-warning {
    background: #f06;
    border-radius: 4px;
    color: #fff;
    padding: 6px 10px;
    text-align: center;
}

.button-warning:hover {
    background: #c06;
}

.button-warning[disabled],
.button-warning[disabled]:hover {
    background: #f06;
    color: #aaa;
    opacity: .8;
}

.button-max {
  width: 100%;
}

 /* list common styles */
.list {
  background: #fff;
  border-bottom: 1px solid #ccc;
  border-top: 1px solid #ccc;
  color: #333;
  margin: 20px 0;
}
 /* list item */
.list-item {
  -webkit-box-align: center;
  -moz-box-align: center;
  -ms-box-align: center;
  box-align: center;
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
  display: -webkit-box;
  display: -moz-box;
  display: -o-box;
  display: -ms-box;
  display: box;
  min-height: 40px;
  padding: 2px 8px;
}
.list-item:not(:last-child),
.list-wrap:not(:last-child) .list-item {
  border-bottom: 1px solid #ccc;
}
 /* list arrow */
.list-arrow {
  padding-right: 24px;
  position: relative;
}
.list-arrow::after {
  content: '';
  border-right: 2px solid #ccc;
  border-top: 2px solid #ccc;
  display: inline-block;
  height: 8px;
  margin: -4px 0 0;
  position: absolute;
  right: 10px;
  top: 50%;
  -webkit-transform: rotate(45deg);
  -moz-transform: rotate(45deg);
  -o-transform: rotate(45deg);
  -ms-transform: rotate(45deg);
  transform: rotate(45deg);
  width: 8px;
}
 /* list link */
.list-link {
  color: #333;
  text-decoration: none;
}
.list-link:hover {
  background: #eee;
}
 /* list image */
.list-image {
  color: #6cf;
  font-family: 'FontAwesome', sans-serif;
  margin: 0 8px 0 0;
  min-width: 40px;
  text-align: center;
}
.list-image-thumb {
  height: 60px;
  padding: 4px 0;
  vertical-align: middle;
  width: 60px;
}
 /* list main */
.list-main {
  -webkit-box-flex: 1;
  -moz-box-flex: 1;
  -o-box-flex: 1;
  -ms-box-flex: 1;
  prop: 1;
}
 /* list title */
.list-item-title {
  overflow: hidden;
  -o-text-overflow: ellipsis;
  text-overflow: ellipsis;
  white-space: nowrap;
}
 /* list value */
.list-value {
  max-width: 5em;
  overflow: hidden;
  -o-text-overflow: ellipsis;
  text-overflow: ellipsis;
  white-space: nowrap;
}
 /* sub text */
.list-subtext {
  color: #999;
  font-size: 0.8em;
}