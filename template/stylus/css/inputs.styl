@import 'includes/examples'

/* common style */
form {
    padding: 10px;
}

.heading {
    background: #333;
    color: #ccc;
    padding: 2px 4px;
}

/* input */
.input-field-text {
    margin: 10px 0;
}

.input-text {
    appearance: none;
    border: solid 1px #ccc;
    border-radius: 4px;
    box-shadow: inset 0 1px 1px #e1e1e1;
    box-sizing: border-box;
    display: block;
    font-size: 16px;
    height: 2em;
    padding: 5px;
}
