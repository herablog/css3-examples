@import 'includes/examples'

body {
    background: #eee;
}

/* common styles */
.list {
    background: #fff;
    border-bottom: 1px solid #ccc;
    border-top: 1px solid #ccc;
    color: #333;
    margin: 30px 0;
}

/* list item */
.list-item {
    box-align: center;
    box-sizing: border-box;
    flexbox()
    min-height: 40px;
    padding: 2px 8px;
}

.list-item:not(:last-child),
.list-wrap:not(:last-child) .list-item {
    border-bottom: 1px solid #ccc;
}

/* list arrow */
.list-arrow {
    padding-right: 24px;
    position: relative;
}

.list-arrow::after {
    content: '';
    border-right: 2px solid #ccc;
    border-top: 2px solid #ccc;
    display: inline-block;
    height: 8px;
    margin: -4px 0 0;
    position: absolute;
    right: 10px;
    top: 50%;
    transform: rotate(45deg);
    width: 8px;
}

/* list link */
.list-link {
    color: #333;
    text-decoration: none;
}

.list-link:hover {
    background: #eee;
}

/* list image */
.list-image {
    color: #6cf;
    font-family: 'FontAwesome', sans-serif;
    margin: 0 8px 0 0;
    min-width: 40px;
    text-align: center;
}

.list-image-thumb {
    height: 60px;
    padding: 4px 0;
    vertical-align: middle;
    width: 60px;
}

/* list main */
.list-main {
    box-flex(1)
}

/* list title */
.list-item-title {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

/* list value */
.list-value {
    max-width: 5em;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

/* sub text */
.list-subtext {
    color: #999;
    font-size: .8em;
}
