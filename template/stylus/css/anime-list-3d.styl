@import 'includes/examples'

body {
    background: #000;
}

.list3d {
    flexbox()
    padding: 100px 100px 200px;
}

.list3d-item {
    background: #999;
    box-reflect: below -3px linear-gradient(top, rgba(0,0,0,0) 50%, rgba(0,0,0,.5));
	-webkit-box-reflect: below -3px -webkit-linear-gradient(top, rgba(0,0,0,0) 50%, rgba(0,0,0,.5));
    height: 100px;
    margin: 0 -20px;
    position: relative;
    transform: perspective(200px) rotateY(45deg);
    transition: all .5s;
    width: 100px;
}

.list3d-item:hover {
    margin: 0 20px;
    position: relative;
    transform: perspective(200px) rotateY(0) scale(1.5);
    z-index: 2;
}
