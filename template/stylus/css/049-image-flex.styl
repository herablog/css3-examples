@import 'includes/examples'

body {
    background: #333;
}

.frame {
    background-color: #000;
    background-position: 50%;
    background-repeat: no-repeat;
    border: 5px solid #efefef;
    height: 200px;
    margin: 20px auto;
    width: 95%;
}

.caption {
    background: rgba(255, 255, 255, .4);
    display: inline-block;
    padding: 2px 8px 2px 4px;
    text-shadow: 0 1px 1px rgba(255, 255, 255, .4);
}

.cover {
    background-size: cover;
}

.contain {
    background-size: contain;
}

.w100-h100 {
    background-size: 100% 100%;
}

.w100-hauto {
    background-size: 100% auto;
}

.wauto-h100 {
    background-size: auto 100%;
}

.picture {
    background-image: url(http://hara-css3.herokuapp.com/img/ship.jpg);
}

.icon {
    background-image: url(http://hara-css3.herokuapp.com/img/icon_globe.png);
}

.thumbnail {
    background-image: url(https://si0.twimg.com/profile_images/3386843234/d14882e7008ccd05498a24da2e2fe633.jpeg);
}


