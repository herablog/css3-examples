@import 'includes/examples'

.breadcrumb {
    background: #390;
    flexbox()
    display: box;
    font-family: sans-serif;
    margin: 40px 20px;
    padding: 2px;
    width: 90%;
}

/* item */
.breadcrumb-item {
    position: relative;
}

.breadcrumb-item a {
    background: #cf6;
    color: #666;
    display: inline-block;
    height: 2em;
    line-height: 2;
    padding: 0 1em;
    text-decoration: none;
    transition: background .2s;
}

.breadcrumb-item:not(:first-child) a {
    padding-left: 2em;
}

/* trignal */
.breadcrumb-item a::before,
.breadcrumb-item a::after {
    border-style: solid;
    border-width: 1em 0 1em 1em;
    content: '';
    display: block;
    height: 0;
    position: absolute;
    top: 0;
    transition: all .2s;
    width: 0;
    z-index: 2;
}

.breadcrumb-item a::before {
    border-color: transparent transparent transparent #390;
    right: -1.15em;
}

.breadcrumb-item a::after {
    border-color: transparent transparent transparent #cf6;
    right: -1em;
}

/* hover style */
.breadcrumb-item a:hover {
    background: #9f0;
    color: #333;
}

.breadcrumb-item a:hover::after {
    border-color: transparent transparent transparent #9f0;
}


